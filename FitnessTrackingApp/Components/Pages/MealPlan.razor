@page "/mealplan"

@using FitnessTrackingApp.Models
@using FitnessTrackingApp.DTOs
@using FitnessTrackingApp.Interfaces

@inject IMealService MealService
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthStateProvider

@rendermode InteractiveServer

<h1 class="text-4xl font-extrabold mb-6 text-black">Weekly Meal Planner</h1>

<div class="flex space-x-2 overflow-x-auto pb-2 border-b border-gray-700 mb-6">
    @foreach (var day in DaysOfWeek)
    {
        <button class="@GetDayButtonClasses(day)" @onclick="() => SelectDay(day)">
            @day: @DayToDate[day].ToString("dd MMM")
        </button>
    }
</div>

<button class="px-6 py-3 bg-green-600 text-white font-semibold rounded-xl shadow-lg hover:bg-green-700 transition duration-150 ease-in-out mb-6"
        @onclick="OpenAddModal">
    + Add Meal
</button>

<div class="space-y-6">
    @if (MealsForSelectedDay.Any())
    {
        @foreach (var meal in MealsForSelectedDay)
        {
            <div class="p-6 rounded-3xl shadow-xl flex items-center justify-between border-l-8 @GetMealBorder(meal) bg-gray-900 text-gray-100">
                <div class="flex-1 space-y-1">
                    <h2 class="text-2xl font-bold flex items-center gap-2">
                        @meal.Name
                        @if (meal.Consumed)
                        {
                            <span class="text-xs bg-green-900 text-green-300 px-2 py-1 rounded-full border border-green-700">Consumed</span>
                        }
                    </h2>
                    <p class="text-lg text-gray-300">@meal.Description</p>
                    <p class="text-sm text-gray-400 font-mono">
                        <span class="text-green-400 font-bold">@meal.Calories</span> kcal
                        | <span class="text-blue-400 font-bold">@meal.ProteinGrams g</span> Protein
                    </p>
                </div>

                <div class="flex space-x-2">
                    <button class="@GetConsumedButtonClass(meal) transition transform hover:scale-105"
                            @onclick="() => ToggleConsumed(meal)"
                            title="Mark as Eaten">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                    </button>

                    <button class="px-4 bg-yellow-500 hover:bg-yellow-600 text-white p-3 rounded-full transition shadow-lg"
                            @onclick="() => OpenEditModal(meal)">
                        ✎
                    </button>

                    <button class="px-4 bg-red-600 hover:bg-red-700 text-white p-3 rounded-full transition shadow-lg"
                            @onclick="() => OpenDeleteModal(meal)">
                        🗑
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-10 text-gray-500">
            <p class="text-xl">No meals planned for @SelectedDay.</p>
            <p class="text-sm">Plan your nutrition to stay on track!</p>
        </div>
    }
</div>

@if (IsModalOpen)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-gray-900 text-gray-100 rounded-lg p-6 w-96 shadow-2xl">
            <h2 class="text-xl font-bold mb-4">@ModalTitle</h2>

            <div class="space-y-3">
                <input class="w-full p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-green-500 outline-none"
                       placeholder="Meal Name (e.g. Breakfast)" @bind="CurrentMeal.Name" />

                <input class="w-full p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-green-500 outline-none"
                       placeholder="Description (e.g. Oats & Whey)" @bind="CurrentMeal.Description" />

                <div class="flex space-x-2">
                    <input class="w-1/2 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-green-500 outline-none"
                           placeholder="Calories" type="number" @bind="CurrentMeal.Calories" />
                    <input class="w-1/2 p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-green-500 outline-none"
                           placeholder="Protein (g)" type="number" @bind="CurrentMeal.ProteinGrams" />
                </div>

                <input class="w-full p-3 rounded-lg bg-gray-800 text-gray-100 border border-gray-700 focus:border-green-500 outline-none"
                       type="date" @bind="CurrentMeal.Date" />
            </div>

            <div class="mt-6 flex justify-end space-x-2">
                <button class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition" @onclick="CloseModal">Cancel</button>
                <button class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-lg transition" @onclick="SaveMeal">Save</button>
            </div>
        </div>
    </div>
}

@if (IsDeleteModalOpen)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-gray-900 text-gray-100 rounded-lg p-6 w-80 shadow-2xl">
            <h2 class="text-xl font-bold mb-4">Confirm Delete</h2>
            <p class="text-gray-300 mb-6">Delete <strong>@MealToDelete?.Name</strong>?</p>
            <div class="flex justify-end space-x-2">
                <button class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded-lg transition" @onclick="CloseDeleteModal">Cancel</button>
                <button class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition" @onclick="ConfirmDeleteMeal">Delete</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Meal> MealsForSelectedDay = new();
    private string UserId = string.Empty;
    private string SelectedDay = "Mon";
    private Dictionary<string, DateTime> DayToDate = new();
    private string[] DaysOfWeek = new[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun" };

    private bool IsModalOpen = false;
    private bool IsDeleteModalOpen = false;
    private string ModalTitle = "Add Meal";
    private MealDto CurrentMeal = new();
    private Meal? EditingMeal = null;
    private Meal? MealToDelete = null;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            UserId = user.FindFirst(c => c.Type.Contains("nameidentifier"))?.Value ?? "";
        }

        // Initialize Week Dates (Handling Sunday Start correctly)
        var startOfWeek = DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek + 1);
        if (DateTime.Today.DayOfWeek == DayOfWeek.Sunday) startOfWeek = DateTime.Today.AddDays(-6);

        foreach (var day in DaysOfWeek.Select((d, i) => new { d, i }))
        {
            DayToDate[day.d] = startOfWeek.AddDays(day.i);
        }

        // Auto-select today
        var todayStr = DateTime.Now.DayOfWeek.ToString().Substring(0, 3);
        if (DaysOfWeek.Contains(todayStr)) SelectedDay = todayStr;

        await LoadMeals();
    }

    private async Task LoadMeals()
    {
        MealsForSelectedDay = await MealService.GetUserMealsByDateAsync(UserId, DayToDate[SelectedDay]);
    }

    private void SelectDay(string day)
    {
        SelectedDay = day;
        _ = LoadMeals();
    }

    private string GetDayButtonClasses(string day) =>
        day == SelectedDay
            ? "px-4 py-2 text-sm font-semibold rounded-full bg-green-500 text-white shadow-lg transform scale-105 transition"
            : "px-4 py-2 text-sm font-medium rounded-full bg-gray-800 text-gray-300 hover:bg-gray-700 transition";

    private string GetMealBorder(Meal meal) =>
        meal.Name.Trim().ToLower() switch
        {
            "breakfast" => "border-yellow-500", // Morning Sun
            "lunch" => "border-cyan-500",       // Mid-day
            "dinner" => "border-purple-500",    // Evening
            "snack" => "border-pink-500",       // Treat
            _ => "border-gray-500"
        };

    private string GetConsumedButtonClass(Meal meal) =>
        meal.Consumed
            ? "bg-green-100 text-green-700 p-3 rounded-full hover:bg-green-200 shadow-md"
            : "bg-gray-700 text-gray-400 p-3 rounded-full hover:bg-gray-600 shadow-md";

    private void OpenAddModal()
    {
        ModalTitle = "Add Meal";
        CurrentMeal = new MealDto { Date = DayToDate[SelectedDay] };
        EditingMeal = null;
        IsModalOpen = true;
    }

    private void OpenEditModal(Meal meal)
    {
        ModalTitle = "Edit Meal";
        EditingMeal = meal;
        CurrentMeal = new MealDto
        {
            Name = meal.Name,
            Description = meal.Description,
            Calories = meal.Calories,
            ProteinGrams = meal.ProteinGrams,
            Date = meal.Date,
            Consumed = meal.Consumed
        };
        IsModalOpen = true;
    }

    private void CloseModal() => IsModalOpen = false;

    private async Task SaveMeal()
    {
        if (EditingMeal != null)
        {
            await MealService.UpdateMealAsync(EditingMeal.Id, UserId, CurrentMeal);
        }
        else
        {
            await MealService.CreateMealAsync(UserId, CurrentMeal);
        }
        IsModalOpen = false;
        EditingMeal = null;
        await LoadMeals();
    }

    private void OpenDeleteModal(Meal meal)
    {
        MealToDelete = meal;
        IsDeleteModalOpen = true;
    }

    private void CloseDeleteModal()
    {
        IsDeleteModalOpen = false;
        MealToDelete = null;
    }

    private async Task ConfirmDeleteMeal()
    {
        if (MealToDelete != null)
        {
            await MealService.DeleteMealAsync(MealToDelete.Id, UserId);
            IsDeleteModalOpen = false;
            await LoadMeals();
        }
    }

    private async Task ToggleConsumed(Meal meal)
    {
        await MealService.ToggleConsumedAsync(meal.Id, UserId);
        await LoadMeals();
    }
}