@* Inherits Blazor base layout class to render @Body *@
@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FitTrack Pro - Your Wellness Tracker</title>
    <!-- Load Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* Custom styles from your layout file */
        body {
            @* Use Inter font *@
            font-family: 'Inter', sans-serif;
            @* Light gray background *@
            background-color: #f7f9fb;
        }

        .nav-item {
            @* Pointer cursor for nav items *@
            cursor: pointer;
            @* Smooth hover transitions *@
            transition: all 0.2s ease-in-out;
        }

        .nav-item.active {
            @* Teal-700 background when active *@
            background-color: #0d9488;
            @* White text when active *@
            color: white;
            @* Shadow effect *@
            box-shadow: 0 4px 6px -1px rgba(13, 148, 136, 0.5), 0 2px 4px -2px rgba(13, 148, 136, 0.5);
        }

        .stat-card {
            @* Smooth hover effect for cards *@
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .stat-card:hover {
            @* Slight lift on hover *@
            transform: translateY(-4px);
            @* Card shadow on hover *@
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        .mock-chart {
            @* Placeholder chart height *@
            height: 200px;
            @* Green gradient *@
            background: linear-gradient(to top, #6ee7b7 0%, #10b981 70%, #059669 100%);
            @* Rounded corners for chart *@
            border-radius: 0.75rem;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col lg:flex-row">

    <!-- 1. Navigation Menu (The NavMenu.razor component call) -->
    <!-- Since NavMenu is in the same folder (Layout), you reference it directly. -->
    <NavMenu />

    <!-- 2. Main Content Area (Renders current page content) -->
    <main id="content-container" class="flex-grow p-4 md:p-8 lg:p-10">
        @Body  @* Render the body content of the current page *@
    </main>

</body>
</html>